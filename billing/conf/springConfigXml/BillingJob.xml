<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean name="billJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="name" value="bill_job"/>
        <property name="group" value="bill_group"/>
        <property name="jobClass" value="org.zstack.billing.header.identity.bill.BillJob"/>
        <property name="jobDataAsMap">
            <map>
                <entry key="databaseFacade" value-ref="databaseFacade" ></entry>
            </map>
        </property>
        <property name="durability" value="true"/>
    </bean>


    <bean id="billCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="name" value="bill_trigger"/>
        <property name="group" value="bill_trigger_group"/>
        <property name="jobDetail" ref="billJob"/>
        <property name="cronExpression" value="0 43 18 * * ?" />
        <property name="timeZone">
            <value>GMT+8:00</value>
        </property>
    </bean>

    <!-- startup then execute once , in case miss the execute time-->
    <bean id="taskJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="billJob" />
        <property name="startDelay" value="5000" />
        <property name="repeatInterval" value="10000" />
        <property name="repeatCount" value="0" />
    </bean>

    <bean name="renewJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="name" value="renew_job"/>
        <property name="group" value="renew_group"/>
        <property name="jobClass" value="org.zstack.billing.header.identity.renew.RenewJob"/>
        <property name="jobDataAsMap">
            <map>
                <entry key="databaseFacade" value-ref="databaseFacade"/>
                <entry key="manager" value-ref="BillingManager"/>
            </map>
        </property>

        <property name="durability" value="true"/>
    </bean>

    <bean id="renewCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="name" value="renew_trigger"/>
        <property name="group" value="renew_trigger_group"/>
        <property name="jobDetail" ref="renewJob"/>
        <property name="cronExpression" value="0 */1 * * * ?" />
        <property name="timeZone">
            <value>GMT+8:00</value>
        </property>
    </bean>

    <bean id="scheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="billCronTrigger"/>
                <ref bean="taskJobTrigger"/>
                <ref bean="renewCronTrigger"/>
            </list>
        </property>
        <property name="applicationContextSchedulerContextKey" value="applicationContext" />
    </bean>

</beans>