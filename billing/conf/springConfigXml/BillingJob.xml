<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean name="billJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="name" value="bill_job"/>
        <property name="group" value="bill_group"/>
        <property name="jobClass" value="org.zstack.billing.header.identity.bill.BillJob"/>
        <property name="jobDataMap">
            <map>
                <entry key="databaseFacade" value-ref="databaseFacade" ></entry>
            </map>
        </property>
        <property name="durability" value="true"/>
    </bean>

    <bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="name" value="bill_trigger"/>
        <property name="group" value="bill_trigger_group"/>
        <property name="jobDetail" ref="billJob"/>
        <property name="cronExpression" value="0 0 8 1 * ?" />
    </bean>

    <bean id="scheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="cronTrigger"/>
            </list>
        </property>
    </bean>

    <bean class="org.zstack.billing.header.identity.renew.RenewAutoInit"></bean>

</beans>