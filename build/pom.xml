<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>zstack</artifactId>
        <groupId>org.zstack</groupId>
        <version>2.0.0</version>
        <relativePath>..</relativePath>
    </parent>
    <artifactId>build</artifactId>
    <packaging>war</packaging>

    <profiles>
        <profile>
            <id>premium</id>

            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-war-plugin</artifactId>
                        <version>2.3</version>
                        <configuration>
                            <packagingExcludes>
                                WEB-INF/lib/maven*.jar,
                                WEB-INF/lib/plexus*.jar,
                                WEB-INF/lib/cvsclient*.jar,
                                WEB-INF/lib/classworlds*.jar,
                                WEB-INF/lib/junit*.jar,
                                WEB-INF/lib/regexp*.jar,
                                WEB-INF/lib/jtidy*.jar,
                                WEB-INF/lib/servlet-api*.jar,
                                WEB-INF/lib/c3p0-0.9.1.1.jar,
                                WEB-INF/lib/reflections-0.9.8.jar,
                            </packagingExcludes>
                            <webResources>

                                <resource>
                                    <directory>.</directory>
                                    <targetPath>META-INF/</targetPath>
                                    <includes>
                                        <include>context.xml</include>
                                    </includes>
                                </resource>
                            </webResources>
                        </configuration>
                    </plugin>

                </plugins>
            </build>

            <dependencies>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>core</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>header</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>portal</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>utils</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>search</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>billing</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>account</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.zstack</groupId>
                    <artifactId>tunnel</artifactId>
                    <version>${project.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>
        <finalName>zstack</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2.2</version>
                <configuration>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <packagingExcludes>
                        WEB-INF/lib/maven*.jar,
                        WEB-INF/lib/plexus*.jar,
                        WEB-INF/lib/cvsclient*.jar,
                        WEB-INF/lib/classworlds*.jar,
                        WEB-INF/lib/junit*.jar,
                        WEB-INF/lib/regexp*.jar,
                        WEB-INF/lib/jtidy*.jar,
                        WEB-INF/lib/servlet-api*.jar,
                        WEB-INF/lib/c3p0-0.9.1.1.jar,
                        WEB-INF/lib/reflections-0.9.8.jar,
                    </packagingExcludes>
                    <webResources>
                        <resource>
                            <directory>.</directory>
                            <targetPath>META-INF/</targetPath>
                            <includes>
                                <include>context.xml</include>
                            </includes>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>header</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>portal</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>utils</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>search</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>account</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>billing</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>sms</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.zstack</groupId>
            <artifactId>tunnel</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>
</project>
